{
  "name": "bare-bone-method",
  "version": "1.0.0",
  "description": "Use the bare bone mehtod to break down UI in component structures and distribute state.",
  "main": "index.js",
  "scripts": {
    "build": "webpack --mode production",
    "start": "webpack serve",
    "dev": "webpack serve --mode development --open",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:dev": "jest --watch",
    "lint": "lint-staged",
    "lint:all": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "cy:run": "npm run start & cypress run",
    "cy:open": "npm run start & cypress open",
    "cy:task-one": "npm run start & wait-on tcp:3000 && cypress run --spec cypress/e2e/task_1_upcoming_movies.cy.ts && npm run server:kill",
    "cy:task-one-bonus": "npm run start & wait-on tcp:3000 && cypress run --spec cypress/e2e/task_1_*.cy.ts && npm run server:kill",
    "cy:task-two-search": "npm run start & wait-on tcp:3000 && cypress run --spec cypress/e2e/task_2_search*.cy.ts && npm run server:kill",
    "cy:task-two-pagination": "npm run start & wait-on tcp:3000 && cypress run --spec cypress/e2e/task_2_pagination.cy.ts && npm run server:kill",
    "cy:task-three-theme": "npm run start & wait-on tcp:3000 && cypress run --spec cypress/e2e/task_3_theme_toggle.cy.ts && npm run server:kill",
    "server:kill": "kill-port -p 3000",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/theseniordev/sm_bare_bone_method.git"
  },
